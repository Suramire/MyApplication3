<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/recommend_linelayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="5dp"
              android:background="#FFFFFF"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/recommend_linelayout2"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recommend_textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="猜你喜欢，来自："
            android:textColor="@android:color/holo_orange_dark"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/recommend_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="分类"/>

        <ImageView
            android:id="@+id/recommend_delete"
            android:layout_width="29dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/recommend_delete"/>

    </LinearLayout>

    <TextView
        android:id="@+id/recommend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:freezesText="false"
        android:text="这里显示帖子标题"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/recommend_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:text="这里显示帖子内容预览这里显示帖子内容预览这里显示帖子内容预览这里显示帖子内容预览这里显示帖子内容预览这里显示帖子内容预览这里显示帖子内容预览这里显示帖子内容预览这里显示帖子内容预览这里显示帖子内容预览"/>

    <TextView
        android:id="@+id/recommend_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这里显示阅读量 （评论数）"/>
</LinearLayout>