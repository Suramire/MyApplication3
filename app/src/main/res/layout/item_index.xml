<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:background="#FFFFFF"
              android:orientation="vertical"
              android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/index_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="这里显示帖子的标签"
            tools:ignore="HardcodedText"/>

    </LinearLayout>

    <TextView
        android:id="@+id/index_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:freezesText="false"
        android:text="这里显示帖子标题"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/index_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:text="这里显示帖子内容预览这里显示帖子内容预览这里显示帖子内容预览这里显示帖子内容预览这里显示帖子内容预览这里显示帖子内容预览这里显示帖子内容预览这里显示帖子内容预览这里显示帖子内容预览这里显示帖子内容预览"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:text="阅读量:"/>

        <TextView
            android:id="@+id/index_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:text="这里显示阅读量 （评论数）"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>